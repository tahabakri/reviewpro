# Server Configuration
PORT=3000
NODE_ENV=development

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key

# Email Configuration (Using Ethereal for development)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=user@example.com
EMAIL_PASS=your_password_here
EMAIL_FROM=notifications@example.com

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Alert Configuration
ALERT_CHECK_INTERVAL=60000
ALERT_TIME_WINDOW=3600000
ALERT_SENTIMENT_DROP_THRESHOLD=0.2
ALERT_NEGATIVE_SPIKE_THRESHOLD=0.3
ALERT_VOLUME_INCREASE_THRESHOLD=2

# Cache Configuration
CACHE_TTL=3600

# WebSocket Configuration
WS_RECONNECT_INTERVAL=3000
WS_MAX_RECONNECT_ATTEMPTS=5

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_REAL_TIME_ALERTS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBHOOK_NOTIFICATIONS=true

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# Testing
TEST_PLACE_ID=test-place-id
